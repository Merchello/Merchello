@inherits Umbraco.Web.Mvc.UmbracoViewPage<BasketModel>
@using Merchello.Bazaar
@using Merchello.Bazaar.Models.ViewModels
@{
    Layout = "Master.cshtml";
}
<div class="row">
        <h1>@Model.Name</h1>
</div>

<div class="row">
    @if (Model.BasketTable.Items.Any())
    {
        @Html.ThemedPartial(Model.Theme, "BasketTable", Model.BasketTable)
    }
    else
    {
        <p><a href="@Model.BasketTable.ContinueShoppingPage.Url">There's nothing in your shopping cart, start shopping!</a></p>
    }
</div>
